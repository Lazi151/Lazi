<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".WelcomeActivity"
    android:id="@+id/mainLayout">

    <!-- Use an invisible view to setup a middle point within the layout-->
    <View android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="#00FFFFFF"/>

    <!-- Background Image-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_sjsu_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#c0dfb3"
        android:id="@+id/tableLayout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/fakeView"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_weight="1"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/centerAnchorRow1"
                />
            <!--Layout For Place Order Button-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/placeOrderLayout"
                android:background="#5cb85c"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeOrderButton"
                    android:padding="20dp"
                    android:layout_above="@+id/placeOrderTextViewBottom"
                    android:layout_below="@+id/placeOrderTextViewTop"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_store"

                    android:contentDescription="" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place"
                    android:id="@+id/placeOrderTextViewTop"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order"
                    android:id="@+id/placeOrderTextViewBottom"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFFFFFF"/>
            </RelativeLayout>


        </RelativeLayout>
            <!--Second Row Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_weight="1"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/centerAnchorRow2"
                />

            <!--Layout For Previous Order Button-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/previousOrderLayout"
                android:background="#5cb85c"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/previousOrderButton"
                    android:src="@+id/ic_action_bookmark"
                    android:padding="20dp"
                    android:layout_above="@+id/previousOrderTextView"
                    android:layout_centerInParent="true"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous Orders"
                    android:id="@+id/previousOrderTextView"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFFFFFF"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/socialButtons"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/facebookButton"
                android:src="@drawable/ic_action_facebook"
                android:background="#00000000"
                android:layout_centerInParent="true"

                android:paddingLeft="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneButton"
                android:src="@drawable/ic_phone"
                android:background="#00000000"
                android:layout_toRightOf="@+id/facebookButton"
                android:paddingRight="10dp"
                android:layout_centerInParent="true"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailButton"
                android:src="@drawable/ic_email"
                android:background="#00000000"
                android:layout_toRightOf="@+id/phoneButton"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
